{
  "manifest_version": 3,
  "name": "PRGrabber",
  "version": "1.0.0",
  "description": "Grab images for Premiere Pro with one right-click",
  
  "permissions": [
    "contextMenus",
    "downloads"
  ],
  
  "host_permissions": [
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  }
}