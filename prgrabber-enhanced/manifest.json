{
  "manifest_version": 3,
  "name": "PRGrabber Enhanced",
  "version": "2.0.0",
  "description": "Grab images and paste directly in Premiere Pro timeline",
  
  "permissions": [
    "contextMenus",
    "downloads",
    "clipboardWrite"
  ],
  
  "host_permissions": [
    "*://*/*",
    "http://localhost:8590/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content.js"]
  }],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  }
}