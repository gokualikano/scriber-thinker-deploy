{
  "manifest_version": 3,
  "name": "Creators Video Automation",
  "version": "1.0",
  "description": "Right-click YouTube videos to send directly to Creators Video Automation desktop app",
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "notifications"
  ],
  
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://youtu.be/*",
    "http://localhost:*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://youtu.be/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Creators Video Automation"
  }
}